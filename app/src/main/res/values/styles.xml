<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:alertDialogTheme">@style/Alert</item>
        <item name="MnemosyneBasicElevation">6dp</item>
        <item name="MnemosyneHigherElevation">12dp</item>
        <item name="MnemosyneFlexibleToolbarHeight">100dp</item>
        <item name="MnemosyneCornerRadius">6dp</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="TaskListTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowAnimationStyle">@style/TaskListAnimation</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Alert" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="android:colorAccent">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/onPrimary</item>
        <item name="android:buttonBarStyle">@style/ButtonMnemosyneText</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="PreferencesTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="android:textColorPrimary">@color/onSecondary</item>
        <item name="android:textColorSecondary">@color/onSecondary</item>
        <item name="android:tint">@color/onSecondary</item>
        <item name="android:alertDialogTheme">@style/Alert</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>

    <style name="TaskListAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="ButtonMnemosyne" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorSecondary</item>
        <item name="android:stateListAnimator">@anim/click_elevation_animation</item>
        <item name="android:elevation">?attr/MnemosyneBasicElevation</item>
        <item name="android:textColor">@color/onSecondary</item>
        <item name="cornerRadius">?attr/MnemosyneCornerRadius</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
    </style>

    <style name="ButtonMnemosyneMedium" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
    </style>

    <style name="ButtonMnemosyneText" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:backgroundTint">#00000000</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="cornerRadius">?attr/MnemosyneCornerRadius</item>
        <item name="android:elevation">0dp</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
    </style>

    <style name="MnemosyneEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textColor">@color/onPrimary</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="android:elevation">0dp</item>
        <item name="boxCornerRadiusTopStart">?attr/MnemosyneCornerRadius</item>
        <item name="boxCornerRadiusTopEnd">?attr/MnemosyneCornerRadius</item>
        <item name="boxCornerRadiusBottomStart">?attr/MnemosyneCornerRadius</item>
        <item name="boxCornerRadiusBottomEnd">?attr/MnemosyneCornerRadius</item>
        <item name="cornerRadius">?attr/MnemosyneCornerRadius</item>
    </style>

    <style name="MnemosyneHintText" parent="TextAppearance.Design.Hint">
        <item name="android:itemBackground">#000000</item>
    </style>

    <style name="MnemosyneEditTextOLD" parent="Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:backgroundTint">@color/colorSecondary</item>
        <item name="android:background">@drawable/layout_text_border</item>
        <item name="android:stateListAnimator">@anim/click_elevation_animation</item>
        <item name="android:textColor">@color/onPrimary</item>
        <item name="cornerRadius">?attr/MnemosyneCornerRadius</item>
    </style>

    <style name="MnemosyneElevatingToolbar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColorSecondary">@color/onPrimary</item>
        <item name="android:textColorPrimary">@color/onPrimary</item>
    </style>

    <style name="MnemosyneCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="cardCornerRadius">?attr/MnemosyneCornerRadius</item>
        <item name="strokeColor">@color/cardBorder</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="MnemosyneExpandedToolbar" parent="Widget.Design.CollapsingToolbar">
        <item name="android:background">@android:color/white</item>
        <item name="statusBarScrim">@color/onPrimary</item>
        <item name="android:textColorSecondary">@color/onPrimary</item>
        <item name="android:textColorPrimary">@color/onPrimary</item>
    </style>

    <style name="MnemosyneTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MnemosyneExpandedTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="MnemosyneBodyText1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="MnemosyneBodyText2" parent="TextAppearance.AppCompat.Body2">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MnemosyneBodyHelper" parent="TextAppearance.Design.HelperText">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/onPrimaryHelper</item>
    </style>

</resources>
