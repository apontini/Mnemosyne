<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Utente">

        <Preference
            android:key="password"
            android:title="Cambia Password"
            />

        <Preference
            android:key="log_out"
            android:title="Esci"
            />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Parametri utente">

        <Preference
            android:key="location_house"
            android:title="Casa"
            android:icon="@drawable/ic_round_home_24px"
            android:summary="@string/text_settings_loading"
            />

        <Preference
            android:key="location_work"
            android:title="Lavoro"
            android:icon="@drawable/ic_round_work_24px"
            android:summary="@string/text_settings_loading"
            />

        <Preference
            android:key="time_lunch"
            android:title="Orario di pranzo"
            android:icon="@drawable/ic_round_restaurant_24px"
            android:summary="@string/text_settings_loading"
            />

        <Preference
            android:key="time_dinner"
            android:title="Orario di cena"
            android:icon="@drawable/ic_round_restaurant_24px"
            android:summary="@string/text_settings_loading"
            />

        <Preference
            android:key="time_bed"
            android:title="Orario letto"
            android:icon="@drawable/ic_round_hotel_24px"
            android:summary="@string/text_settings_loading"
            />

        <Preference
            android:key="time_work"
            android:title="Orario di lavoro"
            android:icon="@drawable/ic_round_access_time_24px"
            android:summary="@string/text_settings_loading"
            />

    </PreferenceCategory>

</PreferenceScreen>